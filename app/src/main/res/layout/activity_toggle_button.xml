<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.utils.com.myapplication.activity.ToggleButtonActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ToggleButton
            android:id="@+id/togglebutton"
            style="@style/toggle_selecter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textOff="关闭"
            android:textOn="打开"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="switch的使用"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义ToggleButton"/>

        <demo.utils.com.myapplication.ui.MyToggleButton
            android:id="@+id/my_togglebut"
            android:layout_width="100dp"
            android:layout_height="30dp"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
